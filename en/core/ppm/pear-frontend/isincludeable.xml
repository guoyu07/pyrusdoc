  &title.param;
  <para>
   <variablelist>
    <varlistentry>
     <term>
      &type.string;
      <parameter>$path</parameter>
     </term>
     <listitem>
      <para>relative or absolute include path</para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsection>
 <refsection xml:id="core.ppm.pear-frontend.isincludeable.throws">
  &title.throws;
  <para>
   <emphasis>throws</emphasis>
