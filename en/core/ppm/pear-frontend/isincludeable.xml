 <refsynopsisdiv>
  <funcsynopsis>
   <funcsynopsisinfo>require_once &apos;/Frontend.php&apos;;</funcsynopsisinfo>
   <funcprototype>
    <funcdef>
     bool
     <function>PEAR_Frontend::isIncludeable</function>
    </funcdef>
    <paramdef choice="req">
     string
