   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.string;
      <parameter>$msg</parameter>
     </term>
     <listitem>
      <para/>
     </listitem>
    </varlistentry>
   </variablelist>
   <variablelist>
    <varlistentry>
     <term>
      &type.bool;
      <parameter>$append_crlf</parameter>
