       <thead>
        <row>
         <entry>Error code</entry>
         <entry>Error value</entry>        
         <entry>Meaning</entry>        
         <entry>Solution</entry>        
        </row>
       </thead>
       <tbody>
        <row>
         <entry/>
         <entry><quote/></entry>
         <entry/>
         <entry/>
        </row>       
       </tbody>
      </tgroup>
     </table>
    </para>    
   </refsection>

   <refsection xml:id="core.ppm.pear-config.writeconfigfile.note">
    &title.note;
    &note.notstatic;
   </refsection>
</refentry>
